{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun src/index.html",
    "lint": "bun oxlint",
    "fmt": "bun dprint fmt",
    "typecheck": "bun tsc --noEmit",
    "build": "bun build ./src/index.tsx --outdir ./dist && cp index.html dist/index.html && cp -R src/static dist/static",
    "start": "bunx serve ./dist"
  },
  "dependencies": {
    "dprint": "^0.50.2",
    "oxlint": "^1.35.0",
    "react": "^19",
    "react-dom": "^19",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "serve": "^14.2.5"
  }
}
